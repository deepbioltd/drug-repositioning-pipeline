
manifest {
  name        = 'drug-repositioning-pipeline'
  author      = 'DeepBio Limited'
  description = 'Reproducible Nextflow pipeline for computational drug repositioning'
}

params {
  drugs_smi         = "data/drugs.smi"
  drug_targets_csv  = "data/drug_targets.csv"
  disease_genes     = "data/disease_genes.txt"
  ppi_sif           = "data/ppi.sif"
  target_pdb        = "data/target_structures/target.pdb"
  disease_up        = "data/signatures/disease_up.txt"
  disease_down      = "data/signatures/disease_down.txt"
  drug_sigs         = "data/signatures/drug_signatures.csv"
  seed              = 20250830
}

profiles {
  standard {
    process.executor = 'local'
  }
  conda {
    conda.enabled  = true
    conda.cacheDir = "$projectDir/.conda"
  }
  docker {
    docker.enabled = true
  }
  singularity {
    singularity.enabled = true
  }
  local {
    process.executor = 'local'
  }
  slurm {
    process.executor = 'slurm'
    process.queue    = 'general'
  }
  aws {
    process.executor = 'awsbatch'
  }
}
